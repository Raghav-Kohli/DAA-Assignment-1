#include <iostream>
using namespace std;
void merge(int a[], int l, int m, int r) {
    int i=l, j=m+1, k=0, t[r-l+1];
    while(i<=m && j<=r) t[k++] = (a[i]<a[j]) ? a[i++] : a[j++];
    while(i<=m) t[k++] = a[i++];
    while(j<=r) t[k++] = a[j++];
    for(i=l, k=0; i<=r; i++, k++) a[i] = t[k];
}
void mergeSort(int a[], int l, int r) {
    if(l<r){
        int m=(l+r)/2;
        mergeSort(a,l,m);
        mergeSort(a,m+1,r);
        merge(a,l,m,r);
    }
}
void print(int a[], int n){
    for(int i=0;i<n;i++) cout<<a[i]<<" ";
    cout<<endl;
}
int main() {
    int arr[]  = {12,11,13,5,6,7};
    int arr2[] = {38,27,43,3,9,82,10};
    mergeSort(arr,0,5);
    mergeSort(arr2,0,6);
    print(arr,6);
    print(arr2,7);
}
